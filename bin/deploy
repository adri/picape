#!/usr/bin/env bash
set -x
#
# Deploy Script
#
bash bin/update

cd assets/ && {
  yarn build;
  cd -;
}

mkdir -p priv/static/
MIX_ENV=prod mix phx.digest
MIX_ENV=prod mix compile

kill `lsof -i:4000 -t`
MIX_ENV=prod elixir --detached --sname picape --cookie picape -S mix phx.server

echo "Finished! Deployed."
